{
    "name": "dortort/php-boilerplate",
    "description": "A simple boilerplate for PHP composer package.",
    "license": "MIT",
    "authors": [
        {
            "name": "Francis Eytan Dortort",
            "email": "francis@dortort.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.4",
        "phpunit/phpunit": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Acme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acme\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
